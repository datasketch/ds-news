    "i18n": "^0.8.3",
    "moment": "^2.24.0",
    "mongoose": "^5.6.4",
    "morgan": "^1.9.1",
    "postcss-cli": "^6.1.3",
    "pug": "^2.0.3",
    "tailwindcss": "^1.0.5"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "autoprefixer": "^9.6.1",
    "concurrently": "^4.1.1",
    "cssnano": "^4.1.10",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-prettier-standard": "^3.0.1",
