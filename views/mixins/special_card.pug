mixin special_card(special)
	div(class="h-full bg-center bg-no-repeat bg-cover relative overflow-hidden", style=`background-image: url(${special.image.secure_url}); background-origin: content-box;`)
		div(class="absolute inset-0 py-4 px-6 flex flex-col justify-center items-start", style="background-color: rgba(0,0,0,.75)")
			+ribbon('especial', 'white')
			h1(class="font-playfair text-lg font-bold my-2 text-white hover:text-magenta sm:text-2xl xl:text-4xl")
				a(href=special.link, target="_blank", rel="noopener noreferrer") #{special.title}
			div(class="content-brief text-white hidden md:block") !{special.description[locale]}